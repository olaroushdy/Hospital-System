@model HospitalSystem.Models.PatientReservation

@{
    ViewData["Title"] = "Edit Patient Reservation";
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FildeId" class="control-label"></label>
                @Html.TextBoxFor(model => model.FildeId, new { disabled = "disabled", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                @Html.TextBoxFor(model => model.Name, new { disabled = "disabled", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label asp-for="ArabicName" class="control-label"></label>
                @Html.TextBoxFor(model => model.ArabicName, new { disabled = "disabled", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                @Html.TextBoxFor(model => model.Gender, new { disabled = "disabled", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label asp-for="Nationality" class="control-label"></label>
                @Html.TextBoxFor(model => model.Nationality, new { disabled = "disabled", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label asp-for="PatientTypeId" class="control-label"></label>
                <select asp-for="PatientTypeId" class="form-control" asp-items=@(new SelectList(@ViewBag.PatientType,"PatientTypeId", "Name"))></select>
            </div>
            <div class="form-group">
                <label asp-for="HomeNumber" class="control-label"></label>
                <input asp-for="HomeNumber" class="form-control" />
                <span asp-validation-for="HomeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MobileNumber" class="control-label"></label>
                <input asp-for="MobileNumber" class="form-control" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
